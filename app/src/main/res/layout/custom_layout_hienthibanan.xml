<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtNameBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/imgBanAn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/banan"
        android:layout_below="@+id/txtNameBanAn"
        />

    <ImageView
        android:id="@+id/imgGoimon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goimon"
        android:layout_below="@+id/imgBanAn"
        android:layout_margin="5dp"

        />
    <ImageView
        android:id="@+id/imgThanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thanhtoan"
        android:layout_toRightOf="@id/imgGoimon"
        android:layout_below="@+id/imgBanAn"
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/imgAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anbutton"
        android:layout_toRightOf="@id/imgThanhtoan"
        android:layout_below="@+id/imgBanAn"
        android:layout_margin="5dp"
        />

</RelativeLayout>